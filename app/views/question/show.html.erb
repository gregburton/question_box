<h4><%= @question.title %></h4>
<p><%= @question.text %></p>
<p><%= @question.user.to_s %></p>

<!--for voting-->
<div class="vote">
  <!--code for where the votes counter is-->
  <h4>#</h4>
  <p>votes</p>
  <i class="fa fa-thumbs-up fa-2x"></i>
    &nbsp;
  <i class="fa fa-thumbs-down fa-2x"></i>
</div>

<div class="row">
  <div class='headings'><h4 class="large-12 columns">Answers</h4></div>
  <% if @answers.count == 0 %>
	<h3>This question hasn't been answered yet.</h3>
	<% end %>
	
	<% @answers.each do |answer| %>
		<p><%= answer.text %></p>
		<p>Answered by <%= answer.user.name %></p>
    <!--for voting-->
    <div class="vote">
      <!--code for where the votes counter is-->
      <h4>#</h4>
      <p>votes</p>
      <i class="fa fa-thumbs-up fa-2x"></i>
      &nbsp;
      <i class="fa fa-thumbs-down fa-2x"></i>
    </div>
	<% end %>
	
	<% if logged_in? %>
		<%= form_for([@question, @question.answers.build]) do |f| %>
		<h3>Answer</h3>
		<%= f.label :text %>
		<%= f.text_area :text %>
		<%= button_tag 'Answer' %>
		<% end %>
	<% else %>
			<%= link_to 'Login to answer this question', new_login_path %>
	<% end %>		
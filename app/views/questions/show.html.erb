<div class="question">
  <div id="<%= dom_id(@question) %>" class="row">
    <div class="small-9 columns">
      <h1 class="question-title"><%= @question.title %></h1>

      <div>
        <%= markdown(@question.text) %>
      </div>
      <div>
        Asked by <%= @question.user.name %>
      </div>
    </div>
    <div class="small-3 columns text-center">
      <%= vote_panel(@question) %>
    </div>
  </div>
  <hr/>

 <div id="sms">
   <% if current_user == @question.user %>
     <p>
       <h6>
         <!--this line of code needs to be modified to agree with the proper variables and functionality
         <#= link_to  solved_question_path(question),  method: :patch, remote: true do %>
         -->
         <i class="fa fa-phone-square fa-2x"></i>
         <% end %>
         &nbsp;I would like to receive text message (SMS) notifications whenever an answer to my question is posted.
       </h6>
     </p>
 </div>

  <div id="bing-links" class="row">
    <div class="small-12 columns">
      <h2>Links from Bing</h2>
      <div class="results">
        Loading...
      </div>
    </div>
  </div>

  <div class="row">
    <h2 class="small-12 columns">
      <%= pluralize(@question.answers.count, "answer") %>
    </h2>
  </div>

  <div id="answers">
    <%= render @answers %>
  </div>

  <a name="your-answer"></a>
  <div class="row">
    <div class="small-9 columns">
      <h2>Add your answer</h2>
      <% if logged_in? %>
        <%= simple_form_for [@question, @answer], remote: true do |form| %>
          <%= form.input :text, :label => false %>
          <%= form.button :submit, "Answer", class: "radius" %>
        <% end %>
      <% else %>
        <p><%= link_to "Log in to answer", login_path %></p>
      <% end %>
    </div>
  </div>
</div>

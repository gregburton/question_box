<%= form_for(@answer) do |f| %>
<% if @answer.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this post from being saved:</h2>
  <ul>
    <% @answer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
<div class="small-12 columns">
  <div class="field">
    <%= f.label :text, nil, class: 'post_label' %><br>
    <%= f.text_field :text %>
  </div>
</div>
</div>
<div class="large-12 columns">
  <div class="field">
    <%= f.label :user_id, nil, class: 'post_label' %><br>
    <%= f.text_area :user_id %>
  </div>
</div>
<div class="row">
  <div class="small-6 columns">
    <div class="field">
      <%= f.label :question_id, nil, class: 'post_label' %><br>
      <%= f.date_select :question_id %>
    </div>
  </div>
</div>
<div class="actions">
<%= f.button :submit, class: "radius small" %>
</div>
<% end %>
